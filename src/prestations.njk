---
title: Mes prestations
layout: layout.njk
style: /css/prestations.css
---
<main class="main_prestations">
  <container class="container_prestations">
    <section class="section_prestations">
      <div class= "title_capt">
        <h1>{{site.priceTitle}}</h1>
      </div>

      {% for prestations in collections.prestations %}
        <div class="card mb-3" style="max-width: 600px;">
          <div class="row g-0">
            <div class="col-md-4">
              <img src="{{ prestations.data.image| url }}" class="img-fluid rounded-start" alt="image">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h2 class="card-title">{{ prestations.data.titre | safe }}</h2>
                <p class="card-text">{{ prestations.data.description | safe }}</p>
                <p class="card-text">{{ prestations.data.conditions | safe }}</p>
                <h3 class="card-title">{{prestations.data.prix | safe }}</h3>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </section>
  </container>

</main>