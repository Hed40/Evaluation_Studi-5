---
title: Mes prestations
layout: layout.njk
style: /css/prestations.css
---
<main class="main_prestations">
  <container class="container_prestations">
    <section class="section_prestations">
      <div class= "title_capt">
        <h1>{{site.priceTitle}}</h1>
      </div>
      {% for prestations in collections.prestations %}
        <div class="card mb-3" style="max-width: 600px;">
          <div class="row g-0">
            <div class="image col-md-4 col-sm-2">
              <img src="{{ prestations.data.image| url }}" class="img-fluid rounded" id="images_presta" alt="image">
            </div>
            <div class="col-md-8 d-flex">
              <div class="card-body d-flex ">
                <div class="combo_title_info">
                  <h2 class="card-title" id="titlecard">{{ prestations.data.titre | safe }}</h2>
                  <button id="logo_info" class="btn btn-link"><img class="logo_info"  src="{{ '/img/logo/information_bleu.png' | url }}"  alt="info"></p>
                </button>
                <div class="toast-container position-absolute top--150 end--150 p-3">
                  <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="toast-header">
                      <img src=" {{ '/img/logo/information_bleu_toast.png' | url }}" class="rounded me-2" alt="info">
                      <strong class="me-auto">Informations complémentaire</strong>
                      <small>Scéance Famille</small>
                      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                    <div class="toast-body">
                      30 € en supplément par personne au-delà de 4, hormis enfants jusqu'à 2 ans.
                    </div>
                  </div>
                </div>
              </div>
              <p class="card-text" id="description">{{ prestations.data.description | safe }}</p>
              <p class="card-text-Price" id="price">{{prestations.data.prix | safe }}
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </section>
  </container>
</main>